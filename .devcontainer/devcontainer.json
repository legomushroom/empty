{
    "image":"mcr.microsoft.com/devcontainers/universal:2",
    "privileged": true,
	"runArgs": [
		"-v", "/lib/modules:/lib/modules",
		"-v", "/dev:/dev",
		"-v", "/boot:/boot",
		"-v", "/:/host",
		"-v", "/proc:/host/proc",
        "--cap-add", "SYS_ADMIN",
		"--cap-add", "ALL"
	],
    "features": {
		"ghcr.io/devcontainers/features/rust:1": {}
	},
	"remoteUser": "root",
	"containerUser": "root"
}
